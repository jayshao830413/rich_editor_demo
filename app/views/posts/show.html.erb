<p id="notice"><%= notice %></p>
<h3>
  <%= @post.title %>
</h3>

<p>
  <%= raw @post.content %>
</p>
<p>
  <% if !@post.avatar_file_name.blank? %>
    <%= image_tag @post.avatar.url %>
  <% elsif !@post.avatar_url.blank? %>
    <%= image_tag @post.avatar_url %>
  <% end %>
</p>
<%= link_to 'Edit', edit_post_path(@post), :class => "btn" %> |
<%= link_to 'Back', posts_path %>
